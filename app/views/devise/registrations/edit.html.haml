%h6
  %center
    %h3 Edit your personal data
    %br
    = form_for(resource, as: resource_name, url:  registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field.form-group
        = f.label :first_name
        %br/
        = f.text_field :first_name, autofocus: true, autocomplete: "name", placeholder: "First name"
      %br
      .field
        = f.label :last_name
        %br/
        = f.text_field :last_name, autofocus: true, autocomplete: "name"
      %br
      .field
        = f.label :age
        %br/
        = f.number_field :age, autofocus: true, autocomplete: "name"
      %br
      .field
        = f.label :date_of_birth
        %br/
        = f.date_field :date_of_birth, autofocus: true, autocomplete: "name"
      %br
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      %br
      .field
        = f.label :password
        %small (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "new-password"
        - if @minimum_password_length
          %br/
          %small
            = @minimum_password_length
            characters minimum
      %br
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      %br
      .field
        = f.label :current_password
        %small  (* Required)
        %br/
        = f.password_field :current_password, autocomplete: "current-password"
      %br
      %button.btn.btn-dark{:type => "submit"} Update
